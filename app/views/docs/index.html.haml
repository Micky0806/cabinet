.wrapper_with_padding
	#docs.clearfix
		- unless @docs.blank?	
			- @docs.each do |doc|
				%a{href: (url_for [doc])}
					.doc
						%p.title= doc.title
						%p.date= about time_ago_in_words(doc.created_at) 
						%p.content= truncate(doc.content, length:70)

		- else
			%h2 Create doc!
			%p Start creating documents and organize your life
			%button= link_to "Create Doc", new_doc_path

